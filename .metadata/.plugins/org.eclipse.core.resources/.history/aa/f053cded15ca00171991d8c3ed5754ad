		public static void calc(int operator, int a, int b){
		int res;
		
		switch(operator)
		{
		case ('+'):
			res = a+b;
			System.out.println("Result:" +res);
			break;
		case ('-'):
			res = a-b;
			System.out.println("Result:" +res);
			break;
		case ('*'):
			res = a*b;
			System.out.println("Result:" +res);
			break;
		case ('/'):
			res = a/b;
		    System.out.println("Result:" +res);
			break;
		default:
			System.out.println("Wrong operator!");
			break;
		}
				
	}

}
