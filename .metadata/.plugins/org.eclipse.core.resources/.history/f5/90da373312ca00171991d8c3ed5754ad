
package vezba;

import java.util.Scanner;


public class Proba2 {
	
	public static void main (String[] args)
	{
		int a;
		int b;
		//int rezultat = 0;
		int operator;
		Scanner ins = new Scanner(System.in);
		operator = ins.nextInt();
		System.out.println("Enter first number:");
		a = ins.nextInt();
		System.out.println("Enter second number:");
		b = ins.nextInt();
        calc(operator, a,b);
	
	}
		public static void calc(int operator, int a, int b){
		int res;
		
		switch(operator)
		{
		case 1:
			res = a+b;
			System.out.println("Result:" +res);
			break;
		case 2:
			res = a-b;
			System.out.println("Result:" +res);
			break;
		case 3:
			res = a*b;
			System.out.println("Result:" +res);
			break;
		case 4:
			res = a/b;
		    System.out.println("Result:" +res);
			break;
		}
				
	}

}
